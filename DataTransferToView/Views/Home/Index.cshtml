@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<Product>
@*https://github.com/zalog/placeholder-loading#readme*@





<div class="content">
    <div class="row">
        @{
            for (int i = 0; i < Model.Count(); i++)
            {
                <div class="col-12">
                    <div class="ph-item">
                        <div class="ph-col-4">
                            <div style=" height: 358px;" class="ph-picture"></div>
                        </div>
                        <div class="ph-col-8">
                            <div class="ph-row">
                                <div class="ph-col-6 big"></div>
                                <div class="ph-col-6 empty big"></div>
                                <div class="ph-col-12"></div>
                                <div class="ph-col-12 empty"></div>
                                <div class="ph-col-12"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div> 

@section js{
    <script>
        $(() => { 
            setTimeout(() => {
            $.getJSON("/home/get", (data) => {
                let template = []
                $.map(data, (p) => {
                    console.log(p)
                    template.push(`<div class="row">
                                        <div class="col">
                                            <div class="card mb-3">
                                                <div class="row g-0">
                                                    <div class="col-md-4">
                                                        <img class="card-img-top" src="https://www.elmasokagi.com/soracan-kare-baklava-baklava-kadayif-soracan-unlu-mamuller-15808-18-B.png" alt="...">
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="card-body">
                                                            <h5 class="card-title">${p.productName}</h5>
                                                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div> `)
                })
                $(".content").html(template)
            })
            }, 3000)
        })
    </script>
}